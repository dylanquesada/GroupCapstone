@model GroupCapstone.Models.ApplicationUser
@{
    ViewBag.Title = "Done";
}

<h2>How did they do?</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class= "form-horizontal">
    @*//Id,Address,Rating,UserName,Address,FirstName,LastName,Rating,Description,Price,Shovelee,Latitude,Longitude*@
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.FirstName)
    @Html.HiddenFor(model => model.LastName)
    @Html.HiddenFor(model => model.Email)
    @Html.HiddenFor(model => model.EmailConfirmed)
    @Html.HiddenFor(model => model.PasswordHash)
    @Html.HiddenFor(model => model.SecurityStamp)
    @Html.HiddenFor(model => model.PhoneNumber)
    @Html.HiddenFor(model => model.PhoneNumberConfirmed)
    @Html.HiddenFor(model => model.TwoFactorEnabled)
    @Html.HiddenFor(model => model.LockoutEndDateUtc)
    @Html.HiddenFor(model => model.LockoutEnabled)
    @Html.HiddenFor(model => model.AccessFailedCount)
    @Html.HiddenFor(model => model.UserName)
    @Html.HiddenFor(model => model.Shovelee)
    @Html.HiddenFor(model => model.Latitude)
    @Html.HiddenFor(model => model.Longitude)
    @Html.HiddenFor(model => model.Description)
    @Html.HiddenFor(model => model.Price)
    @Html.HiddenFor(model => model.Address)
    @Html.HiddenFor(model => model.PricePoint)
    @Html.HiddenFor(model => model.Distance)
    @Html.HiddenFor(model => model.HomeRating)

    <div class="form-group">
        @Html.LabelFor(m => m.Rating, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Rating, new { @class = "form-control" })
        </div>
    </div>
    <br />



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<form action="/Payment/Charge" method="POST">
    <article>
        <label>Amount: @Model.Price</label>
    </article>
    <script src="//checkout.stripe.com/v2/checkout.js"
            class="stripe-button"
            data-key="@ViewBag.StripePublishKey"
            data-locale="auto"
            data-description="Sample Charge"
            data-amount=(@Model.Price * 10000)>
    </script>
</form>
